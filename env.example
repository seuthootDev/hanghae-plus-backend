# ========================================
# 애플리케이션 설정
# ========================================

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 비밀번호 해싱 설정
BCRYPT_SALT_ROUNDS=10

# 관리자 계정 설정
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=admin

# 애플리케이션 설정
PORT=3000
NODE_ENV=development

# ========================================
# 데이터베이스 설정 (로컬 개발)
# ========================================

# 로컬 MySQL 설정
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=hanghae_plus
DB_LOGGING_ENABLED=false

# ========================================
# Docker 환경 설정
# ========================================

# Docker MySQL 설정
MYSQL_ROOT_PASSWORD=root1234
MYSQL_DATABASE=hanghae_db
MYSQL_USER=hanghae_user
MYSQL_PASSWORD=hanghae1234
MYSQL_PORT=3306

# Docker 애플리케이션 포트
APP_PORT=3000

# Docker용 데이터베이스 설정
# DB_HOST=mysql (Docker Compose에서 자동 설정)
# DB_PORT=3306
# DB_DATABASE=hanghae_db
# DB_USERNAME=hanghae_user
# DB_PASSWORD=hanghae1234
# DB_LOGGING_ENABLED=true (Docker에서는 로깅 활성화 권장)

# ========================================
# 카프카 설정
# ========================================

# 로컬 카프카 설정
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=hanghae-app

# Docker 카프카 설정
# KAFKA_BROKERS=kafka:9092 (Docker Compose에서 자동 설정)
# KAFKA_ZOOKEEPER=zookeeper:2181 